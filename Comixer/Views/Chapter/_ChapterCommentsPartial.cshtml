@using Comixer.Core.Models.Comment;
@using System.Globalization
@model List<CommentModel>

@foreach (var comment in Model)
{
    <div class="row">
        <div class="col-lg-11 col-10">
            <h5><a href="profile.html">@comment.Username</a><b>@comment.PostDate.Humanize(false, culture: CultureInfo.InvariantCulture)</b></h5>
            <p class="ms-2 h4">@comment.Content</p>
            @* <a href="#" class="comment-btn"><i class="bi bi-heart"> 12</i></a> //TODO: AddComments *@
        </div>
    </div>
}