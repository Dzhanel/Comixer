@model ChapterModel
@{
    ViewData["Title"] = Model.Title;
}
@section HeadScripts {
    <script type="text/javascript" src="~/lib/turnjs4/dist/js/jquery.min.1.7.js"></script>
    <script type="text/javascript" src="~/lib/turnjs4/dist/js/modernizr.2.5.3.min.js"></script>
    <script type="text/javascript" src="~/lib/turnjs4/dist/js/turn.min.js"></script>
}
<section class="chapter sec-mar">
    <div class="container">
        <div class="heading style-1">
            <h2>@Model.Title</h2>
            <span><a asp-action="Comic" asp-controller="Comics" asp-route-id="@Model.ComicId">@Model.ComicName</a></span>
        </div>
        <div class="d-flex justify-content-between mb-4">
            <div class="left position-relative">
                <a href="#" class="anime-btn btn-dark border-change dropdown-toggle" id="country"
                   data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                    PREVIOUS CHAPTERS
                    <span><i class="fa fa-chevron-down"></i></span>
                </a>
                @if (ViewBag.PreviousFiveChapters is not null)
                {
                    <ul class="dropdown-menu" aria-labelledby="country">
                        @foreach (var chapter in ViewBag.PreviousFiveChapters)
                        {
                            <li><a asp-action="Chapter" asp-controller="Chapter" asp-route-id="@chapter.Id">@chapter.Title</a></li>
                        }
                    </ul>
                }
            </div>
            <div>
                
            </div>
            <div class="right">
                @if (Model.PreviousChapter is not null)
                {
                    <a asp-controller="Chapter" asp-action="Chapter" asp-route-id="@Model.PreviousChapter.Id" class="anime-btn btn-dark">PREVIOUS @Model.PreviousChapter.ComicName</a>
                }
                @if (Model.NextChapter is not null)
                {
                    <a asp-controller="Chapter" asp-action="Chapter" asp-route-id="@Model.NextChapter.Id" class="anime-btn btn-dark border-change ms-1">NEXT @Model.NextChapter.ComicName</a>
                }
            </div>
        </div>
        <div class="row pt-4">
            <div class="chapter-image col-lg-10 offset-lg-1 col-12 offset-0">
                <partial name="_BookPartial" model="Model.ChapterImages">
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/reader.js"></script>
}
