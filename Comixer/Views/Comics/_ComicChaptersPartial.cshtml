@using System.Globalization
@model ICollection<ComicChaptersModel>

<section class="relese">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 col-md-12 col-sm-12">
                <h3 class="small-title">Releases</h3>
                @if(Model.Count > 0)
                {
                    @foreach (var chapter in Model)
                    {
                        <a asp-controller="Chapter" asp-action="Chapter" asp-route-id="@chapter.Id" class="d-inline light">
                            <h5 class="">@chapter.Title <span>@chapter.ReleaseDate.ToString("MMM, dd yyyy", CultureInfo.InvariantCulture)</span></h5>
                            </a>
                        <hr>
                    }
                }
                else
                {
                    <div class="h4">No releases yet</div>
                }
                @* <div class="text-center">
                    <a href="#" class="relese-btn">Show More</a>
                </div>
                <hr>*@
            </div>
        </div>
    </div>
</section>