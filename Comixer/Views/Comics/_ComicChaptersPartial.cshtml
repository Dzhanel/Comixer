@model ICollection<ComicChaptersModel>

<section class="relese">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 col-md-12 col-sm-12">
                <h3 class="small-title">Releases</h3>
                @foreach (var chapter in Model)
                {
                    <a asp-controller="Chapter" asp-action="Chapter" asp-route-id="@chapter.Id" class="d-inline"><h5>@chapter.Title <span>@chapter.ReleaseDate</span></h5></a>
                    <hr>
                }
                <div class="text-center">
                    <a href="#" class="relese-btn">Show More</a>
                </div>
                <hr>
            </div>
        </div>
    </div>
</section>