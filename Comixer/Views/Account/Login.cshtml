@model Comixer.Models.Account.LoginViewModel;
@{
    ViewData["Title"] = "Login";
}
<div class="main-wrapper" id="main-wrapper">
    <section class="login text-center">
        <div class="container">
            <div class="login-block">
                <div class="login-content">
                    <div class="user-icon">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <h3>Log in</h3>
                    <div>
                        <form asp-action="login" method="post" class="form-validator">
                            <div class="form-group">
                                <input class="form-control" type="email" asp-for="Email" required placeholder="username or email address">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group password-type-field">
                                <input asp-for="Password" class="form-control" type="password" id="password-field" required placeholder="enter password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <span class="text-end toggle-password" toggle="#password-field"> <i class="bi bi-eye toggle-password"></i></span>
                            </div>
                            <button type="submit" class="anime-btn border-change play-butn">
                                Log In
                            </button>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </form>
                        <p><a href="reset-password.html">Forget Password</a></p>
                    </div>
                    <p class="policy">By continuing, you agree to ANIMELOOP Terms of Use and Privacy Policy.</p>
                    <p class="guide">Create an account? <a asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a></p>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}